{
  "[pip-requirements]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "[properties]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "black-formatter.args": ["--line-length", "100"],
  "black-formatter.importStrategy": "fromEnvironment",
  "black-formatter.interpreter": [".\\.venv\\Scripts\\python.exe"],
  "black-formatter.path": [".\\.venv\\Scripts\\black.exe"],
  "editor.codeActionsOnSave": {
    "source.convertImportFormat": "always",
    "source.fixAll": "always",
    "source.fixAll.pylance": "always",
    "source.organizeImports": "always"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "files.exclude": {
    ".git": true
  },
  "files.watcherExclude": {
    ".git": true,
    ".venv": true
  },
  "pylint.args": ["--rcfile=.\\pylintrc.cfg"],
  "pylint.importStrategy": "fromEnvironment",
  "pylint.interpreter": [".\\.venv\\Scripts\\python.exe"],
  "pylint.severity": {
    "convention": "Warning",
    "error": "Error",
    "fatal": "Error",
    "info": "Information",
    "refactor": "Warning",
    "warning": "Warning"
  },
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticSeverityOverrides": {
    "reportUnusedClass": "warning"
  },
  "python.analysis.extraPaths": ["${workspaceFolder}\\src"],
  "python.analysis.fixAll": ["source.convertImportFormat"],
  "python.analysis.importFormat": "absolute",
  "python.analysis.include": ["${workspaceFolder}\\src"],
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.typeCheckingMode": "standard",
  "python.createEnvironment.trigger": "prompt",
  "python.missingPackage.severity": "Warning",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.terminal.activateEnvironment": true,
  "pythonIndent.keepHangingBracketOnLine": true,
  "pythonIndent.trimLinesWithOnlyWhitespace": true,
  "pythonIndent.useTabOnHangingIndent": true,
  "search.exclude": {
    ".git": true
  },
  "terminal.integrated.defaultProfile.windows": "bash-python-env",
  "terminal.integrated.profiles.windows": {
    "bash-python-env": {
      "color": "terminal.ansiCyan",
      "source": "Git Bash"
    }
  },
  "workbench.colorTheme": "Monokai Night",
  "workbench.iconTheme": "material-icon-theme"
}
